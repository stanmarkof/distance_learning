@model IEnumerable<distant.Models.Feedback>

<h2>Отзывы пользователей</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Имя пользователя</th>
            <th>Email</th>
            <th>Сообщение</th>
            <th>Дата</th>
            <th>Удалить</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model)
        {
            <tr>
                <td>@feedback.Id</td>
                <td>@feedback.UserName</td>
                <td>@feedback.Email</td>
                <td>@feedback.Message</td>
                <td>@feedback.DateSubmitted</td>
                <td>
                    <form method="post" action="@Url.Action("DeleteFeedback", "Admin")">
                        <input type="hidden" name="id" value="@feedback.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Вы уверены, что хотите удалить этот отзыв?');">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
