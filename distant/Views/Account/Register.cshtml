@model distant.ViewModels.RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <p>@error.ErrorMessage</p>
}


<h2>Регистрация</h2>

<form method="post">
    <div>
        <label>Фамилия</label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>

    <div>
        <label>Имя</label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>

    <div>
        <label>Отчество</label>
        <input asp-for="MiddleName" />
        <span asp-validation-for="MiddleName"></span>
    </div>

    <div>
        <label>Электронная почта</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label>Логин</label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>

    <div>
        <label>Пароль</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label>Подтвердите пароль</label>
        <input asp-for="ConfirmPassword" type="password" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <div>
        <label>Введите код, выданный дирекцией</label>
        <input asp-for="VerificationCode" />
        <span asp-validation-for="VerificationCode"></span>
    </div>

    <button type="submit">Зарегистрироваться</button>
</form>
