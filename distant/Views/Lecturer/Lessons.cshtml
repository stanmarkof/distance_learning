@model IEnumerable<distant.Models.Lesson>

<h2>Мои уроки</h2>

<a href="@Url.Action("CreateLesson", "Lecturer")" class="btn btn-primary">Создать урок</a>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Группы</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model)
        {
            <tr>
                <td><a href="@Url.Action("LessonPage", "Lecturer", new { id = lesson.Id })">@lesson.Name</a></td>
                <td>@string.Join(", ", lesson.Groups.Select(g => g.Name))</td>

                <td>
                    <a href="@Url.Action("EditLesson", "Lecturer", new { id = lesson.Id })" class="btn btn-warning">Редактировать</a>
                    <form action="@Url.Action("DeleteLesson", "Lecturer")" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@lesson.Id" />
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
