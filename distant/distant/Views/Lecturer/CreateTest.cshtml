@model distant.Models.Test

<h2>Создание теста</h2>

<form asp-action="CreateTest" asp-controller="Lecturer" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="LessonId" value="@Model.LessonId" />

    <div class="form-group">
        <label for="Title">Название теста</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
    </div>

    <div class="form-group">
    </div>

    <button type="submit" class="btn btn-primary">Создать</button>
    <a href="@Url.Action("Tests", "Lecturer", new { lessonId = Model.LessonId })" class="btn btn-secondary">Отмена</a>
</form>