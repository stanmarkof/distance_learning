@model distant.Models.Question

<h2>Добавить вопрос</h2>

<form asp-action="AddQuestion" method="post">
    <!-- Скрытое поле для TestId -->
    <input type="hidden" id="TestId" name="TestId" value="@Model.TestId" />

    <!-- Поле для текста вопроса -->
    <div class="form-group">
        <label for="Text">Текст вопроса</label>
        <input type="text" id="Text" name="Text" class="form-control" placeholder="Введите текст вопроса" />
    </div>

    <!-- Поле для вариантов ответа -->
    <div class="form-group">
        <label for="Options">Варианты ответа (через запятую)</label>
        <textarea id="Options" name="Options" class="form-control" placeholder="Введите варианты ответа, разделенные запятой"></textarea>
    </div>

    <!-- Поле для правильного ответа -->
    <div class="form-group">
        <label for="CorrectAnswer">Правильный ответ</label>
        <input type="text" id="CorrectAnswer" name="CorrectAnswer" class="form-control" placeholder="Введите правильный ответ" />
    </div>

    <!-- Кнопка отправки -->
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
