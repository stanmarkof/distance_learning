@model List<distant.ViewModels.StudentTestResultViewModel>

<h2>Мои результаты</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Тест</th>
            <th>Урок</th>
            <th>Результат</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var result in Model)
            {
                <tr>
                    <td>@result.TestTitle</td>
                    <td>@result.LessonName</td>
                    <td>@result.Score из @result.MaxScore</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">Результатов пока нет.</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("AvailableLessons", "Student")" class="btn btn-primary">Вернуться к урокам</a>
